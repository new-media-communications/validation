{
  "name": "nmc/validation",
  "description": "PHP Laravel like standalone validation library",
  "license": "MIT",
  "authors": [
    {
      "email": "fitim@newmedia.al",
      "name": "Fitim Vata"
    }
  ],
  "autoload": {
    "psr-4": {
      "Nmc\\Validation\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": ["tests", "tests/Fixtures"]
    }
  },
  "require": {
    "php": "^8.4",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "php-coveralls/php-coveralls": "^2.2",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-drift": "^4.0",
    "symfony/var-dumper": "^7.3",
    "rector/rector": "^2.2",
    "phpstan/phpstan": "^2.1",
    "laravel/pint": "^1.25"
  },
  "scripts": {
    "phpstan": [
        "phpstan analyse --pro --memory-limit=2G"
    ],
    "format": ["pint"],
    "test": ["pest"]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
