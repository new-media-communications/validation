{
  "name": "rakit/validation",
  "description": "PHP Laravel like standalone validation library",
  "license": "MIT",
  "authors": [
    {
      "email": "emsifa@gmail.com",
      "name": "Muhammad Syifa"
    }
  ],
  "autoload": {
    "psr-4": {
      "Rakit\\Validation\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": ["tests", "tests/Fixtures"]
    }
  },
  "require": {
    "php": "^8.4",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^4",
    "php-coveralls/php-coveralls": "^2.2",
    "pestphp/pest": "^4.1",
    "pestphp/pest-plugin-drift": "^4.0",
    "symfony/var-dumper": "^7.3",
    "rector/rector": "^2.2"
  },
  "scripts": {
    "test": [
        "phpunit",
        "phpcs"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
